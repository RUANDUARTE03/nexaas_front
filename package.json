    "graphql": "^15.5.1",
    "lodash": "^4.17.21",
    "named-urls": "^2.0.0",
    "next": "11.0.1",
    "next-i18next": "^8.10.0",
    "next-redux-wrapper": "^7.0.2",
    "node-sass": "4.14.1",
    "path": "^0.12.7",
